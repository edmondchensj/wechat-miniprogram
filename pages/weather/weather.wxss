.container {
  padding: 10px;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  text-align: center;
  margin-bottom: 20px;
}

.header-image {
  width: 50px; /* Adjust size as needed */
  height: 50px; /* Adjust size as needed */
  margin-right: 10px;
}

.area-scroll-view {
  white-space: nowrap;
  width: 100%;
}

.area {
  display: inline-block;
  width: 80%; /* Set width to control how much of each item is visible */
  margin: 5px 10%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
}

.area text {
  display: block;
}
